@model mainMasterpiesce.Models.transactionsdoctor

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminDashBoard.cshtml";
}



<div class="page-wrapper">
    <div class="content container-fluid">

        <!-- Page Header -->
        <div class="page-header">
            <div class="row">
                <div class="col-sm-12">
                    <a> <h3 class="page-title" onclick="toggleDisplay('upcoming-appointments')"> transactions</h3></a>
                    <ul class="breadcrumb">
                    
                    </ul>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">


                <!-- Recent Orders -->
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <div id="upcoming-appointments" class="appointments">
                                <dl class="dl-horizontal">
                                    <dt style="font-weight:bold">
                                        Doctor Name
                                    </dt>

                                    <dd>
                                        @Model.DOctorName
                                    </dd>
                                    <dt >
                                       Doctor Photo
                                    </dt>

                                    <dd>
                                       
                                        <img src="@Url.Content(@Model.doctor.picdoctor)" alt="@Model.doctor.picdoctor"  width="100"/>
                                    </dd>




                                    <dt>
                                        @Html.DisplayNameFor(model => model.amount)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.amount)
                                    </dd>

                           

                                    <dt>
                                        @Html.DisplayNameFor(model => model.status)
                                    </dt>

                                    <dd>
                                        @if (Model.status == "1")
                                        {


                                            <span class="badge badge-pill bg-danger-light">Pending</span>
                                        }
                                        else if (Model.status == "2")
                                        {

                                            <span class="badge badge-pill bg-success inv-badge">Paid</span>
                                        }
                                    </dd>



                                    <dt>
                                        @Html.DisplayNameFor(model => model.Tansactiontime)
                                    </dt>

                                    <dd>

                                        @if (Model.Tansactiontime.HasValue)
                                        {

                                            @Model.Tansactiontime.Value.ToString("dd-MM-yyyy")

                                        }
                                    </dd>



                                </dl>
                            </div>
                            <p>
                          
                                @Html.ActionLink("Back to List", "DoctorTransaction", null, new { @class = "btn btn-secondary" })
                            </p>
                            </div>
</div></div>
</div>