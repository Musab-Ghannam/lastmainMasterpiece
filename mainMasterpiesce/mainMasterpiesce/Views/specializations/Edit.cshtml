@model mainMasterpiesce.Models.specialization

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminDashBoard.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">

        <!-- Page Header -->
        <div class="page-header">
            <div class="row">
                <div class="col-sm-12">
                    <a> <h3 class="page-title" onclick="toggleDisplay('upcoming-appointments')"> Appointments</h3></a>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item" id="prev"><a href="#" onclick="toggleDisplay('previous-appointments')">Previous Appointment</a></li>
                        <li class="breadcrumb-item" id="upc"><a href="#" onclick="toggleDisplay('upcoming-appointments')">upcoming-appointments</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">


                <!-- Recent Orders -->
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <div id="upcoming-appointments" class="appointments">

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        <h4>specialization</h4>
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.specializationId)

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.namespecialization, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.namespecialization, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.namespecialization, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.descriptionspecialization, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @*@Html.EditorFor(model => model.descriptionspecialization, new { htmlAttributes = new { @class = "form-control", style = "height: 200px;" } })*@
                                                <p>
                                                    <textarea class="form-control" style="height:150px" name="desc">   @ViewBag.desc2    @ViewBag.desc
                                             </textarea>
                                                 
                                                      
                                                </p>
                                                @Html.ValidationMessageFor(model => model.descriptionspecialization, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.picturespecialization, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.picturespecialization, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.picturespecialization, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.videospecializaion, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.videospecializaion, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.videospecializaion, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Save" class="btn btn-default btn btn-info" />
                                            </div>
                                        </div>
                                    </div>
                                }

                            <div>
                                @*@Html.ActionLink("Back to List", "Index")*@

                                <a href="/Index" class="btn btn-secondary">Back to List</a>

                            </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>

