@model mainMasterpiesce.Models.specialization

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminDashBoard.cshtml";
}


<div class="page-wrapper">
    <div class="content container-fluid">

        <!-- Page Header -->
        <div class="page-header">
            <div class="row">
                <div class="col-sm-7 col-auto">
                    <h3 class="page-title">Specialities</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                        <li class="breadcrumb-item active">Specialities</li>
                    </ul>
                </div>

            </div>
        </div>
        <!-- /Page Header -->
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <span>@error.ErrorMessage</span><br />
                                }
                            </div>
                        }

                        <h3>Are you sure you want to delete this?</h3>
                        <div>
                            <h4>specialization</h4>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.namespecialization)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.namespecialization)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.descriptionspecialization)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.descriptionspecialization)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.picturespecialization)
                                </dt>

                                <dd>
                                    <img src=" ~/Content/images/@Html.DisplayFor(model => model.picturespecialization)" alt="@Html.DisplayFor(model => model.picturespecialization)" width="100" />
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.videospecializaion)
                                </dt>

                                <dd>
                                    <iframe width="560" height="315" src="@Model.videospecializaion"
                                            frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                                </dd>

                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                    @Html.ActionLink("Back to List", "Index")
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>