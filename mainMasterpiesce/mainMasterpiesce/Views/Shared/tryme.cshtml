}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>tryme</title>

    <link href="~/Content/hom1.css" rel="stylesheet" />
</head>
<body>

    <div class="owl-carousel owl-theme mt-5">
        @*<div class="owl-item">
                <div class="card">
                    <div class="img-card">
                        <img src="~/Content/images/dr.png"
                             alt="" />
                        <div class="rating">

                            <i class="fa-sharp fa-solid fa-star"></i>
